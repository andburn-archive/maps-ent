@model MapsAgo.Web.ViewModels.NewEventViewModel

@using (Html.BeginForm("Create", "Event", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    <fieldset class="form-horizontal">
        <legend>Search Online</legend>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-2">
                @Html.TextBox("query", null, new
                        {
                            @class = "form-control",
                            type = "search",
                            placeholder = "Search for an event to add..."
                        })
            </div>
            <div class="col-md-2">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </fieldset>
    <fieldset class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4 col-md-offset-2">
                <input type="radio" name="cat-group" value="battles" checked />&nbsp;Battles
            </div>
            <div class="col-md-4">
                <input type="radio" name="cat-group" value="diasters" />&nbsp;Diasters
            </div>
            <div class="col-md-4 col-md-offset-2">
                <input type="radio" name="cat-group" value="artists"  />&nbsp;Artists
            </div>
            <div class="col-md-4">
                <input type="radio" name="cat-group" value="recordings" />&nbsp;Recordings
            </div>
        </div>
    </fieldset>
    <hr />
}