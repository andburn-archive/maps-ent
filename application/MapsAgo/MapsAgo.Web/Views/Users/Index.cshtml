@model IEnumerable<MapsAgo.Web.ViewModels.UserListViewModel>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<table class="table">
    <tr>
        <th><span class="glyphicon glyphicon-lock"></span></th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfEvents)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FlaggedEvents)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
            @if (item.Authorized) { 
                <span class="glyphicon glyphicon-user"></span>
            } else {
                <span class="glyphicon glyphicon-user"
                      style="color: lightgray"></span>
            }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>                
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(x => item.NumberOfEvents)
            </td>
            <td>
                @Html.DisplayFor(x => item.FlaggedEvents)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", 
                    new { id = item.Id },
                    new { @class = "btn btn-default btn-xs" }
                )
            </td>
        </tr>
    }
</table>
