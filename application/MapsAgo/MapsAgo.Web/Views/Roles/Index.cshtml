@model IEnumerable<MapsAgo.Model.ApplicationUser>

@{
    ViewBag.Title = "Manage User Roles";
}

<h2>Manage</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles)
        </th>
    </tr>
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Roles)
        </td>
        <td>
        <div class="form-group">
            @*Html.LabelFor(model => model.Roles, "Roles", new { @class = "control-label col-md-2" })*@
            Roles
            <div class="col-md-10">
                @Html.DropDownList("RoleList", String.Empty)
                @*Html.ValidationMessageFor(modelItem => item.Roles)*@
            </div>
        </div>
        </td>
    </tr>
    }
</table>
